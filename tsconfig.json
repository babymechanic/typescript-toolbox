{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "declaration": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": false,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "alwaysStrict": true,

  },
  "include": [
    "index.ts",
    "./src/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
